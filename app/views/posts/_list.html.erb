<%@posts.each do |post|%>
  <div class="row">
    <div class ="col-xs-1 post-rating">
      <%= link_to upvote_path(:id => post.id), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-arrow-up"></i>
      <% end %>
      <h3><%= post.rating %></h3>
      <%= link_to downvote_path(:id => post.id), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-arrow-down"></i>
      <% end %>
    </div>
    <div class="col-xs-1 pic-preview">
      <a href="<%=post.url%>" class="thumbnail">
        <img src="<%=post.url%>" onerror="this.src='<%=image_path("yaddit_guy#{%w(1 2 3 4).sample}.png")%>';" alt="Missing Image">
      </a>
    </div>
    <div class="col-xs-10">
      <%= link_to upvote_path(:id => post.id) do %>
        <a href="<%= post.url %>">
          <h2 class="post-title">
            <%= post.title %>
          </h2>
        </a>
      <% end %>
    </div>
  </div>
  <hr/>
<% end %>
