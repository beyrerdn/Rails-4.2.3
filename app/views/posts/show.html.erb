<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<% if current_user %>
  <%= render :partial => 'comments/form', :locals => {:commentable_object => @post} %>
<% end %>

<%= render :partial => "comments/comment", :collection => @post.comments %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
