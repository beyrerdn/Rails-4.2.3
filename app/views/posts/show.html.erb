<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= link_to do %>
    <%= @post.url %>
  <% end %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<% if current_user %>
  <div class="form"><%= render :partial => "comments/form", :locals => {:commentable_object => @post} %></div>
<% end %>

<div class="view-comments"><%= render :partial => "comments/comment", :collection => @post.comments %></div>
